<!-- ======= Main Section ======= -->
<script>
    function dismissAlert(){
        console.log(error.message)
        document.getElementById("errMsg").style.display = "none";
    }
</script>
<%
if (typeof error != 'undefined') { %>
    <div id="errMsg" class="alert alert-dismissible alert-danger position-absolute">
        <strong><%= error.status %> </strong><%= error.message %>
        <button type="button" class="close" data-dismiss="alert" onclick="dismissAlert()">&times;</button>
    </div>
<% }%>
<section id="main" class="d-flex align-items-center">
    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-9 col-md-6 text-center" data-aos="zoom-in" data-aos-delay="700">
                <img src="assets/img/TEXT-TRANSPARENT.webp" class="logo" alt="SPACE" width="200">
                <h2>Take out the leader or try to survive</h2>
            </div>
        </div>
        <!-- First row of boxes -->
        <div class="row boxes justify-content-center">
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="200">
                <div class="box justify-content-center">
                    <h4 class="title">How to play?</h4>
                    <p class="description">
                        Control the spaceship to destroy asteroids and flying saucers in this classic arcade multidirectional
                        shooter video game by Atari. Be careful not to collide with the asteroids that are all around you,
                        and avoid counter-fire from the saucers.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="400">
                <div class="box justify-content-center">
                    <% if (typeof user != 'undefined') { %>
                        <input type="text" name="nickname" class="form-control login-user" id="nick" maxlength="15" placeholder="<%= user.nickname %>">

                    <%
                    }%>
                    <a href="/game" class="btn btn-submit">Play</a>
                        <div class="row bottom">
                            <div class="col-md-6">
                                <a href="/logout" class="btn btn-link" id="signup">Logout</a>
                            </div>
                        </div>

                </div>
            </div>

            <div class=" col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="500">
                <div class="box justify-content-center">
                    <h4 class="title"></h4>
                    <p class="description"></p>
                </div>
            </div>
        </div>

        <!-- Second row of boxes -->
        <div class="row boxes justify-content-center">
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="200">
                <div class="box">
                    <h4 class="title">Tip</h4>
                    <p class="description">
                        You can use the onscreen or keyboard arrows to control the spaceship. For laptop users, using a mouse
                        instead of your touchpad can be a smoother experience.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="400">
                <div class="box">
                    <h4 class="title"></h4>
                    <p class="description"></p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 mb-lg-0" data-aos="zoom-in" data-aos-delay="500">
                <div class="box">
                    <h4 class="title"></h4>
                    <p class="description"></p>
                </div>
            </div>

        </div>



    </div>
</section><!-- End Hero -->


